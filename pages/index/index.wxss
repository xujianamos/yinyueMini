.indexContainer{
    width: 100%;
}
/* 轮播图区域 */

swiper image{
    height: 100%;
    width: 100%;
}

.navContainer{
    display: flex;

    /* justify-content: space-evenly; */
}
.navItem{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
}
.navItem .iconfont{
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 50rpx;
    color: white;
    text-align: center;
    border-radius: 50%;
    background-color: rgb(240, 19, 19);
    margin: 20rpx 0;
}
.navItem text{
    font-size: 26rpx;
}
/* 推荐区域 */
.recommendContainer{
    padding: 20rpx;
}
.recommendContainer .header > text{
    font-size: 32rpx;
    line-height: 80rpx;
    color: #666;
}
.recommendContainer .header .more{
    float: right;
    border: 1rpx solid #333;
    border-radius: 30rpx;
    padding: 10rpx 20rpx;
    font-size: 26rpx;
}
.recommendScroll{
    display: flex;
}
.recommendScroll .scrollItem{
    width: 200rpx;
    margin-right: 20rpx;
}
.recommendScroll .scrollItem image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}
.scrollItem text{
    /* 单行文本溢出隐藏 */
    /* display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis; */
    /* 多行文本溢出隐藏 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;/*设置对齐模式*/
    -webkit-line-clamp: 2;/*设置行数*/
}