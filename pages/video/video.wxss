.videoContainer .header image{
width: 60rpx;
height: 60rpx;
}
.videoContainer .header{
  display: flex;
  padding: 10rpx;
}
.videoContainer .header .search{
  flex: 1;
  margin: 0 20rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  color: #d43c33;
}
/* 导航区域 */
.navScroll{
  display: flex;
  white-space: nowrap;
  height: 60rpx;
  margin-bottom: 10rpx;
}
.navScroll .navItem{
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.navScroll .navContent{
  height: 60rpx;
  box-sizing: border-box;

}
.navScroll .navItem .active{
  color: #d43c33;
  border-bottom: 1rpx solid #d43c33;
}
/* 视频列表区域 */
.videoScroll{

}
.videoScroll .videoItem{
padding: 0 10rpx;
}
.videoScroll .videoItem video{
  box-sizing: border-box;
  width: 100%;
  border-radius: 10rpx;
}